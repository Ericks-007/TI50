algoritmo "Algoritmo17"

var
 n : inteiro
inicio
  escreval("Digite um numero que seja INTEIRO")
  leia(n)

  se (n mod 2 = 0)   entao
  escreval("O numero é par")
  senao
  escreval("O numero é impar")
  fimse
  se (n>0) entao
   escreval("O numero é Postivo")
  senao
   escreval("O numero é Negativo")
  fimse
fimalgoritmo

Var
   pol, mm : real
Inicio
   escreval("Conversão de quantidade de chuvas, de polegadas a milimetros")
   escreval("Digite a qtde de chuva em polegadas")
   leia(pol)
   
   mm <- 25.4 * pol
   
   escreval(pol," pol. equivalem a ", mm," mm de chuva")
Fimalgoritmo